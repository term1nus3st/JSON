        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="@+id/imagenewyork"
        app:layout_constraintLeft_toLeftOf="@+id/imagenewyork"
        app:layout_constraintRight_toRightOf="@+id/imagenewyork"
        app:layout_constraintTop_toTopOf="@+id/imagenewyork"
