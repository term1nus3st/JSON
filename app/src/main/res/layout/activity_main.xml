        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textTemperature"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageyerevan"
        app:layout_constraintRight_toLeftOf="@+id/textView8"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textofPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressure"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageyerevan"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textPressure"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
